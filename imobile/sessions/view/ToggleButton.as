package imobile.sessions.view {	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;		public class ToggleButton extends MovieClip	{		private var _TYPE:String;				public var ENABLED:Boolean;		public var STATE:Boolean = false;				public function ToggleButton() { getInstance(); }				public function get TYPE():String 		{			return _TYPE;		}				public function enable():void 		{			ENABLED = true;			setListeners();		}				public function disable():void 		{			ENABLED = false;			removeListeners();					}				public function upState():void		{			STATE = false;			this.gotoAndStop(1);		}				public function downState():void		{			STATE = true;			this.gotoAndStop(2);		}				public function down(e:MouseEvent = undefined):void 		{			var newState:int = 3 - this.currentFrame;			STATE = (newState == 1) ? false : true;			this.gotoAndStop(newState);		}				private function setListeners():void 		{			this.buttonMode = true;			this.addEventListener(MouseEvent.MOUSE_DOWN, down, false, 0, true);		}				private function removeListeners():void 		{			this.buttonMode = false;			this.removeEventListener(MouseEvent.MOUSE_DOWN, down);		}				public function getInstance():void 		{			_TYPE = this.name;			enable();		}	}}