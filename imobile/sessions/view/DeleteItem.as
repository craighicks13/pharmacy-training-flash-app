package imobile.sessions.view{	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.KeyboardEvent;	import flash.ui.Keyboard;		public class DeleteItem extends MovieClip	{				public function DeleteItem() 		{			addEventListener(Event.ADDED, clipAdded, false, 0, true);		}				private function clipAdded(e:Event):void		{			removeEventListener(Event.ADDED, clipAdded);			addEventListener("click", miSelected, false, 0, true);		}				private function miSelected(e:Event):void		{			e.target.removeEventListener("click", miSelected);			e.target.gotoAndStop(2);			stage.addEventListener(KeyboardEvent.KEY_DOWN, deleteHandler, false, 0, true);			dispatchEvent(new Event("item_selected"));		}				private function deleteHandler(e:KeyboardEvent):void		{			//if(e.keyCode == 68)			if(e.keyCode == Keyboard.BACKSPACE)			{				gotoAndStop(3);				stage.removeEventListener(KeyboardEvent.KEY_DOWN, deleteHandler);				dispatchEvent(new Event("item_deleted"));			}		}	}	}