package imobile.sessions.view{	import flash.display.MovieClip;	import flash.events.Event;    import flash.text.TextField;    import flash.text.TextFieldType;		public class ChooseLocation extends MovieClip	{		private var _matchString:String;				public function ChooseLocation() 		{			addEventListener(Event.ADDED, clipAdded, false, 0, true);		}				public function set matchString(s:String):void		{			_matchString = s;		}				private function clipAdded(e:Event):void		{			removeEventListener(Event.ADDED, clipAdded);			location_tf.addEventListener("change", checkLocationString, false, 0, true);		}				private function checkLocationString(e:Event):void		{			location_tf.text = location_tf.text.toUpperCase();			if(location_tf.text == _matchString)			{				location_tf.type = TextFieldType.DYNAMIC;				location_tf.removeEventListener("change", checkLocationString);				dispatchEvent(new Event("input_correct"));			}		}	}	}