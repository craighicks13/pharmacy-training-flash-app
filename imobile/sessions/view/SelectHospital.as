package imobile.sessions.view{	import flash.display.MovieClip;	import flash.events.Event;		public class SelectHospital extends MovieClip	{				public function SelectHospital() 		{			addEventListener(Event.ADDED, clipAdded, false, 0, true);		}				private function clipAdded(e:Event):void		{			removeEventListener(Event.ADDED, clipAdded);			hospitalList.addEventListener("change", hospitalSelect, false, 0, true);		}				private function hospitalSelect(e:Event):void		{			if(e.target.selectedIndex)				OK.addEventListener("click", proceed, false, 0, true);			else				removeOkListener();		}				private function removeOkListener():void		{			try			{				OK.removeEventListener("click", proceed);			}catch(e:*){}		}					private function proceed(e:Event):void		{			removeOkListener();			hospitalList.removeEventListener("change", hospitalSelect);			dispatchEvent(new Event("hospital_selected"));		}	}	}