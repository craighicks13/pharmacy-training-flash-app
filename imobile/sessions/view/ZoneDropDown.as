package imobile.sessions.view{	import flash.display.MovieClip;	import flash.events.Event;	import fl.controls.ComboBox;		public class ZoneDropDown extends MovieClip	{		public static var SELECTED:String = "zone_selected";		private var _zone:ComboBox;		public var _zoneSelect:MovieClip;		private var _mustSelect:uint;				public function ZoneDropDown(list:String)		{			var w:uint = list=="zone" ? 192 : 260;			zoneComboBoxSetup(w);			var zoneList:Array = getDropDownList(list);			populateComboBox(zoneList);			addChild(_zone);		}				private function populateComboBox(list:Array):void		{			for(var num = 0; num < list.length; num++)			{				_zone.addItem(list[num]);			}		}				private function zoneComboBoxSetup(w:uint)		{			_zone = new ComboBox();			_zone.rowCount = 11;			_zone.width = w;			_zone.height = 24;			_zone.addEventListener("change", zoneSelected, false, 0, true);		}				private function zoneSelected(e:Event):void		{			if(_mustSelect)			{				if(_mustSelect == e.target.selectedItem.data)					dispatchZone();			}			else if(e.target.selectedItem.data)				dispatchZone();		}				private function dispatchZone():void		{			trace("Zone Selected");			dispatchEvent(new Event(SELECTED));		}				public function set mustSelect(n:uint):void		{			_mustSelect = n;		}				private function getDropDownList(s:String)		{			var zoneList:Array;			switch(s)			{				case "zone":					zoneList = 	[								  {label:"--\>Choose a Zone\<--",data:0},								  {label:"Zone 1",data:1},								  {label:"Zone 2",data:2},								  {label:"Zone 3",data:3},								  {label:"Zone 4",data:4},								  {label:"Zone 5",data:5},								  {label:"Zone 6",data:6},								  {label:"Zone 7",data:7},								  {label:"Zone 8",data:8},								  {label:"Zone 9",data:9},								  {label:"Zone 10",data:10},								  {label:"Zone 11",data:11},								  {label:"Zone 12",data:12},								  {label:"Zone 13",data:13},								  {label:"Zone 14",data:14},								  {label:"Zone 15",data:15},								  {label:"Zone 16",data:16},								  {label:"Zone 17",data:17},								  {label:"Zone 18",data:18},								  {label:"Zone 19",data:19},								  {label:"Zone 20",data:20}								 ];					break				case "complex_card":					zoneList = 	[								  {label:"--\>Choose a Complex Card\<--",data:0},								  {label:"Master Map Zone 18",data:1},								  {label:"Complex Card 1",data:2},								  {label:"Complex Card 2",data:3},								  {label:"Complex Card 3",data:4},								  {label:"Complex Card 3A",data:5},								  {label:"Complex Card 4",data:6},								  {label:"Complex Card 4A",data:7},								  {label:"Complex Card 4B",data:8},								  {label:"Complex Card 4C",data:9},								  {label:"Complex Card 4D",data:10},								  {label:"Complex Card 5",data:11}								];					break;			}			return zoneList;		}	}}