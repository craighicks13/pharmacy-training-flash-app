package imobile.view {	import flash.display.MovieClip;	import flash.events.Event;	import imobile.controller.MenuController;	import imobile.controller.LessonsController;	import imobile.view.MenuItem;		public class HomeScreen extends MovieClip	{		private var menuItemsX:Number = 273;		private var menuItemsY:Number = 350;				private var menuItemsGap:Number = 10;				public function HomeScreen() 		{			MenuController.getInstance().addEventListener(MenuController.GOT_LESSONS, addMenuItems, false, 0, true);		}				public function addMenuItems(e:Event):void 		{			MenuController.getInstance().removeEventListener(MenuController.GOT_LESSONS, addMenuItems);			var mi:Array = MenuController.getInstance().getLessons();			for(var i:int = 0; i < mi.length; i++) 			{				addItem(i, mi[i]);			}		}				private function addItem(num:int, session:Object):void 		{			var mi:homeMenuItem = new homeMenuItem();			mi.x = menuItemsX;			mi.y = menuItemsY + ((mi.height + menuItemsGap) * num);			mi.label = session.getLabel();			mi.fileShow = session.getShowFile();			mi.fileGuide = session.getGuideFile();			mi.fileExplore = session.getExploreFile();			mi.name = "lesson" + String(num);			mi.addEventListener(MenuItem.SESSION_SELECTED, menuItemClicked, false, 0, true);			addChild(mi);		}				private function menuItemClicked(e:Event):void 		{			LessonsController.getInstance().getLesson(e.target);		}	}}