package imobile.view {	import flash.display.MovieClip;	import flash.text.TextField;	import flash.events.MouseEvent;	import flash.events.Event;		public class MenuItem extends MovieClip 	{		public static const SESSION_SELECTED:String = "session_selected";				protected var _label:String;		// LABEL FOR THIS MENU ITEM		protected var _fileShow:String;		// SHOW FILE THAT IS ATTACHED TO THIS MENU ITEM		protected var _fileGuide:String;		// GUIDE FILE THAT IS ATTACHED TO THIS MENU ITEM		protected var _fileExplore:String;	// EXPLORE FILE THAT IS ATTACHED TO THIS MENU ITEM				public function MenuItem() { init(); }				public function set label(param:String):void {			_label = param;			lbl.text = _label;			lbl.autoSize = "left";			adjustTextY();		}				protected function adjustTextY() {			lbl.y = height/2 - lbl.height/2;	// ADJUST THE TEXT TO VERTICALLY ALIGN WITH THE CENTER OF THE CLIP		}				public function set fileShow(param:String):void {			_fileShow = param;		}				public function get fileShow():String {			return _fileShow;		}				public function set fileGuide(param:String):void {			_fileGuide = param;		}				public function get fileGuide():String {			return _fileGuide;		}				public function set fileExplore(param:String):void {			_fileExplore = param;		}				public function get fileExplore():String {			return _fileExplore;		}				protected function itemClicked(e:MouseEvent):void {			dispatchEvent(new Event(MenuItem.SESSION_SELECTED));		}				// INSTANCE TRIGGERED BY SELF ON CREATION		protected function init() {			trackAsMenu = true;			// LETS FLASH KNOW THIS CLIP IS TO HAVE BUTTON FUNCTIONALITY			buttonMode = true;			// WE WANT THE HAND CURSOR TO SHOW UP ON ROLLOVER OF THE MOVIECLIP			lbl.mouseEnabled = false;	// TURN OFF THE CLICK LISTENER FOR THE TEXTFIELD ON THE CLIP			btn.getInstance(this);		// SET UP THE ARROW BUTTON INSTANCE WITHIN THIS CLIP			addEventListener(MouseEvent.CLICK, itemClicked, false, 0, true);		}	}}