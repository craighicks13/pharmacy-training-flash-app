package imobile.view {	import flash.display.DisplayObject;	import flash.events.MouseEvent;		import imobile.controller.iButton;
		public class MenuItemButton extends iButton	{		public static const _TYPE:String = "CLOSE";				public function MenuItemButton(){ }				// INSTANCE IS TRIGGERED BY PARENT "MenuItem" CLASS		public function getInstance(p:DisplayObject):void 		{			gotoAndStop(1); // FOR SOME REASON THE BUTTON WANTED TO SHOW IN THE OVER STATE. THIS RESETS IT.			// LISTEN FOR MOUSE INTERACTIONS WITH THE PARENT TO EFFECT THE INDICATING ARROW CLIP			p.addEventListener(MouseEvent.MOUSE_DOWN, down, false, 0, true);			p.addEventListener(MouseEvent.MOUSE_UP, up, false, 0, true);			p.addEventListener(MouseEvent.MOUSE_OVER, over, false, 0, true);			p.addEventListener(MouseEvent.MOUSE_OUT, out, false, 0, true);		}	}}