package imobile.view {	import flash.display.MovieClip;	import imobile.controller.LessonsController;		public class NavPanel extends MovieClip 	{		protected var disableButtonList:Array;				public function NavPanel() { init(); }				public function disableButtons():void 		{			var i:int = disableButtonList.length;			while(i-- > 0)			{				disableButtonList[i].disable();			}			slider.visible = false;			bar.visible = false;			showPlay(true);		}				public function enableButtons():void 		{			var i:int = disableButtonList.length;			while(i-- > 0)			{				disableButtonList[i].enable();			}			slider.visible = true;			bar.visible = true;			togglePlayType();		}				public function showPlay(_state:Boolean):void		{			play_btn.visible = _state;		}				public function togglePlayType():void		{			switch(LessonsController.LESSON_TYPE)			{				case "show":					show_btn.disable();					break;				case "guide":					guide_btn.disable();					play_btn.disable();					pause_btn.disable();					break;				case "explore":					explore_btn.disable();					play_btn.disable();					pause_btn.disable();					break;			}		}				protected function init() 		{			disableButtonList = [close_btn, show_btn, guide_btn, explore_btn, rewind_btn, pause_btn, play_btn];			disableButtons();		}	}}